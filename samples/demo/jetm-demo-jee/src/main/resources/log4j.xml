<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
  <appender name="ETM_LOG" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <param name="Threshold" value="INFO"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} [%c{1}] %m%n"/>
    </layout>
  </appender>

  <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.err"/>
    <param name="Threshold" value="DEBUG"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} [%p] [%x] [%t] [%c{1}] %m%n"/>
    </layout>
  </appender>

  <category name="org.apache.commons">
    <priority value="INFO"/>
  </category>

  <category name="etm-raw-data">
    <priority value="INFO"/>
    <appender-ref ref="ETM_LOG"/>
  </category>

  <root>
    <appender-ref ref="CONSOLE"/>
  </root>
</log4j:configuration>